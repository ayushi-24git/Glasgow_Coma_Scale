<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.aarnarratta.glasgowcomascale.AccountActivity.Service"
    tools:showIn="@layout/activity_service">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0FFFF"
        android:orientation="vertical"
        android:id="@+id/r2">

        <android.support.v7.widget.CardView
            android:id="@+id/card7"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:cardBackgroundColor="#BBFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#E0FFFF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_question" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHECK"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="#00868b"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identify any factors that might interfere with your assessment."
                    android:textAlignment="center"
                    android:textColor="#00868b"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card8"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:cardBackgroundColor="#BBFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/linear8"
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#E0FFFF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_observe" />

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OBSERVE"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="#00868b"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text88"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observe for spontaneous behaviours in any of the three components of the GCS."
                    android:textAlignment="center"
                    android:textColor="#00868b"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:cardBackgroundColor="#BBFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/linear9"
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#E0FFFF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_stimulate" />

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="STIMULATE"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="#00868b"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verbal and physical stimuli will be needed in patients without spontaneous behaviours."
                    android:textAlignment="center"
                    android:textColor="#00868b"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card0"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:cardBackgroundColor="#BBFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/linear0"
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#E0FFFF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image0"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_check" />

                <TextView
                    android:id="@+id/text0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RATE"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="#00868b"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judge observed response against presence or absence of defined criteria."
                    android:textAlignment="center"
                    android:textColor="#00868b"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
