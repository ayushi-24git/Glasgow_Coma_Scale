<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.aarnarratta.glasgowcomascale.AccountActivity.team">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0FFFF"
        android:orientation="vertical"
        android:id="@+id/r2">

        <android.support.v7.widget.CardView
            android:id="@+id/card7"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:cardBackgroundColor="#BBFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#E0FFFF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="200dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/aarna" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aarna R Ratta"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="#00868b"
                    android:textSize="40sp"
                    android:textStyle="bold" />



            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card8"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:cardBackgroundColor="#BBFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/linear8"
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#E0FFFF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="200dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/anushka" />

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anushka Agarwal"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="#00868b"
                    android:textSize="40sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:cardBackgroundColor="#BBFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/linear9"
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#E0FFFF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="200dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ayushi" />

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ayushi Rastogi"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="#00868b"
                    android:textSize="40sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </android.support.v7.widget.CardView>




    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
